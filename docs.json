{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Unleash",
  "colors": {
    "primary": "#EAEAED",
    "light": "#837BFF",
    "dark": "#1A4049"
  },

  "appearance": {
    "default": "light"
  },
  "background": {
    "decoration": "gradient",
    "color": {
      "light": "#FFFFFF"
    }
  },
  "fonts": {
    "heading": {
      "family": "Styrene A Web",
      "source": "https://www.getunleash.io/fonts/StyreneA-Light-Web.woff2",
      "format": "woff2",
      "weight": 800
    },
    "body": {
      "family": "Styrene B Web",
      "source": "https://www.getunleash.io/fonts/StyreneB-Regular-Web.woff2",
      "format": "woff2"
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Home",
        "pages": ["index"]
      },
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get started",
            "pages": [
              "quickstart",
              "what-is-a-feature-flag",
              "understanding-unleash/unleash-overview"
            ]
          },
          {
            "group": "Core concepts",
            "pages": [
              "understanding-unleash/the-anatomy-of-unleash",
              {
                "group": "Projects and environments",
                "pages": [
                  "reference/projects",
                  "reference/project-collaboration-mode",
                  "reference/environments"
                ]
              }
            ]
          },
          {
            "group": "Tutorials and guides",
            "pages": [
              {
                "group": "Feature management",
                "pages": [
                  "feature-flag-migration/feature-flag-migration-best-practices"
                ]
              },
              {
                "group": "Dev and release workflows",
                "pages": [
                  "how-to-create-feature-flag",
                  "how-to/how-to-schedule-feature-releases"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Addons",
            "pages": [
              "reference/api/unleash/get-addons",
              "reference/api/unleash/create-addon",
              "reference/api/unleash/update-addon",
              "reference/api/unleash/delete-addon"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Status",
          "href": "https://unleash.instatus.com/",
          "icon": "signal"
        },
        {
          "anchor": "Blog",
          "href": "https://www.getunleash.io/blog",
          "icon": "newspaper"
        },
        {
          "anchor": "Community",
          "href": "https://unleash-community.slack.com/signup",
          "icon": "slack"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://www.getunleash.io"
  },
  "navbar": {
    "links": [
      {
        "label": "Sign in ",
        "href": "https://app.unleash-hosted.com/sign-in"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Start Free Trial",
      "href": "https://www.getunleash.io/plans/enterprise-payg"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/getunleash",
      "github": "https://github.com/Unleash/unleash",
      "linkedin": "https://www.linkedin.com/company/getunleash",
      "slack": "https://unleash-community.slack.com/signup",
      "youtube": "https://www.youtube.com/channel/UCJjGVOc5QBbEje-r7nZEa4A"
    }
  }
}
